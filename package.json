{
    "name": "escaped-chasm-jp-patch",
    "version": "0.1.0",
    "description": "Escaped Chasm Unofficial Japanese translate patch",
    "author": "Proudust <proudust@gmail.com>",
    "license": "MIT",
    "repository": "github:proudust/escaped-chasm-jp-patch",
    "homepage": "https://github.com/proudust/escaped-chasm-jp-patch#readme",
    "bugs": "https://github.com/proudust/escaped-chasm-jp-patch/issues",
    "private": true,
    "scripts": {
        "build": "run-p build:*",
        "build:docs": "cpy README.md dist --rename=README.txt",
        "build:guide": "cpy GAME_GUIDE_JP dist --parents",
        "build:ts": "tsc",
        "clean": "cross-conf-env rimraf dist npm_package_name.zip",
        "fix": "run-s fix:*",
        "fix:eslint": "eslint --fix .",
        "fix:prettier": "prettier --write --ignore-path .eslintignore .",
        "lint": "run-p fix:*",
        "lint:eslint": "eslint .",
        "lint:prettier": "prettier --check --ignore-path .eslintignore .",
        "test": "jest",
        "watch": "tsc -w",
        "zip": "cd dist && cross-conf-env bestzip ../npm_package_name.zip *"
    },
    "devDependencies": {
        "@types/jest": "^26.0.14",
        "@typescript-eslint/eslint-plugin": "^4.4.0",
        "@typescript-eslint/parser": "^4.4.0",
        "bestzip": "^2.1.7",
        "cpy-cli": "^3.1.1",
        "cross-conf-env": "^1.2.0",
        "eslint": "^7.11.0",
        "eslint-config-prettier": "^6.12.0",
        "jest": "^26.5.2",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.1.2",
        "rimraf": "^3.0.2",
        "rpgmakermv_typescript_dts": "^1.5.2",
        "ts-jest": "^26.4.1",
        "typescript": "^4.0.3"
    }
}
